@using InspectR.Data
@using InspectR.Helpers
@{
    var UserProfile = ViewBag.UserProfile as InspectRUserProfile;
}
<a href="https://github.com/remcoros/InspectR"><img style="position: absolute; top: 0; left: 0; border: 0; z-index: 9999" src="https://camo.githubusercontent.com/567c3a48d796e2fc06ea80409cc9dd82bf714434/68747470733a2f2f73332e616d617a6f6e6177732e636f6d2f6769746875622f726962626f6e732f666f726b6d655f6c6566745f6461726b626c75655f3132313632312e706e67" alt="Fork me on GitHub" data-canonical-src="https://s3.amazonaws.com/github/ribbons/forkme_left_darkblue_121621.png"></a>

<div class="row">
    @if (UserProfile == null)
    {
        <div class="jumbotron row">
            <div class="col-md-7">
                <h1>InspectB.in</h1>
                <h4>Inspect and debug webhooks with InspectB.in</h4>
                <p class="lower">
                    Need to know the content of that GitHub webhook response? Testing out an external webservice? Point your external http client or webhook to a RequestB.in url and start inspecting.
                </p>
                <ul class="">
                    <li>No need to refresh your browser, requests appear on your screen as they come in.</li>
                    <li>Includes a syntax highlighter and allows wrapping long lines.</li>
                    <li>Name and save your bins when you sign up.</li>
                    <li>Completely free and open-source.</li>
                </ul>
                <a class="btn btn-primary btn-lg" href="@Url.InspectR().Create()">Create new InspectBin &raquo;</a>
            </div>
            <div class="col-md-5">
                <img src="~/Content/images/screenshot1.png" alt="screenshot" title="InspectR screenshot" class="" />
            </div>
        </div>
    }
    else
    {
        <div class="col-md-8">
            <div class="jumbotron row">
                <h1>InspectB.in</h1>
                <h4>Inspect and debug webhooks with InspectB.in</h4>
                <p class="lower">
                    Need to know the content of that GitHub webhook response? Testing out an external webservice? Point your external http client or webhook to a RequestB.in url and start inspecting.
                </p>
                <ul class="">
                    <li>No need to refresh your browser, requests appear on your screen as they come in.</li>
                    <li>Includes a syntax highlighter and allows wrapping long lines.</li>
                    <li>Name and save your bins when you sign up.</li>
                    <li>Completely free and open-source.</li>
                </ul>
                <a class="btn btn-primary btn-lg" href="@Url.InspectR().Create()">Create new InspectBin &raquo;</a>
            </div>
        </div>
        <div class="col-md-4">
            <div class="well sidebar-nav">
                <ul class="nav nav-list">
                    <li class="nav-header">Your bins:</li>
                    @foreach (var item in UserProfile.Inspectors.Take(10)) {
                        <li>
                            <a href="@Url.InspectR().Inspect(item.UniqueKey)">
                                @if (item.Title != item.UniqueKey
                                     && !string.IsNullOrWhiteSpace(item.Title)) {
                                    @item.Title
                                    <small>(@item.UniqueKey)</small>
                                }
                                else {
                                    @item.UniqueKey
                                }
                            </a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    }
</div>

<div class="row">
    <div class="col-md-4">
        <div class="well purple">
            <img src="~/Content/images/opensource.png" class="sign"/>
            <h2>Open Source</h2>
        </div>
        <p>
            InspectB.in runs the opensource project InspectR. It is build using Asp.Net MVC, SignalR (Rrr), Bootstrap, Knockout JS and several others.<br/>
        </p>
        <p>
            For more info, visit our github project wiki.
        </p>
        <p>
            <a class="btn btn-link" href="https://github.com/remcoros/InspectR/wiki">Project Wiki &raquo;</a>
        </p>
    </div>
    <div class="col-md-4">
        <div class="well red">
            <img src="~/Content/images/Git.png" class="sign"/>
            <h2>Contribute!</h2>
        </div>
        <p>
            We are just starting this project, any help is welcome. Feel free to join in. Send us suggestions, report any issues or fork the code and send a pull requests.
        </p>
        <p>
            Check out the <em>code</em> on our github page.
        </p>
        <p>
            <a class="btn btn-link" href="https://github.com/remcoros/InspectR">Github Project &raquo;</a>
        </p>
    </div>
    <div class="col-md-4">
        <div class="well green">
            <img src="~/Content/images/how.png" class="sign"/>
            <h2>How does it work?</h2>
        </div>
        <p>
            When a http request is made to your inspectbin url, it is logged with additional data about the http request.
            The browser is immediately notified of this new incomming request and shows it to you in a nice way.
        </p>
        <p>Try it yourself, it's free!</p>
        <p>
            <a class="btn btn-link" href="@Url.InspectR().Create()">Create new InspectBin &raquo;</a>
        </p>
    </div>
</div>